<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Luxe For Goods</title>
        <link rel="stylesheet" href="./dist/output.css">
    </head>
<body>
    <div class="row container">

        <% for(var index=0; index < itemData.length; index++){ %>
            <div class="col s4">
                <a href="/item/<%= itemData[index].id %>">
                    <div class="card center-align">
                        <div class="card-image">
                            <img src="<%= itemData[index].data()['photoUrl'] %>">
                        </div>

                        <div class="card-body" style="padding-bottom: 5px;">
                            <h3 class="card-title  center-align">
                                <%= itemData[index].data()['name'] %>
                            </h3>
                            <h5 class="card-text center-align">
                                â‚± <%=
                                    parseFloat(itemData[index].data()['price']).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,'
                                    ) %>
                            </h5>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</body>
</html>